= form_for @appearer do |f|
  - if @appearer.errors.any?
    #error_explanation
      %h2= "#{pluralize(@appearer.errors.count, "error")} prohibited this appearer from being saved:"
      %ul
        - @appearer.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :request_property
    = f.text_field :request_property
  .field
    = f.label :last_name
    = f.text_field :last_name
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :civil_status
    = f.text_field :civil_status
  .actions
    = f.submit 'Save'
